<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_event_wrapper_dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingVertical="5dp"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/item_event_calendar_blob_dark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp">
        <ImageView
            android:id="@+id/item_event_calendar_blob_dark_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tintMode="add"
            android:src="@drawable/circle"/>
        <ImageView
            android:id="@+id/item_event_calendar_blob_dark_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:tintMode="add"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_event_text_view_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:paddingVertical="5dp"
        android:text="@string/event_placeholder"
        android:maxLines="1"
        android:ellipsize="end"
        />
</LinearLayout>